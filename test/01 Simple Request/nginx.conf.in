load_module $NGINX_OPENTRACING_MODULE;

events {}

http {
  opentracing on;
  opentracing_load_tracer $MOCKTRACER_LIBRARY $MOCKTRACER_CONFIG;

  upstream backend {
    server localhost:9001;
  }

  server {
    listen 8080;
    server_name localhost;

    location = / {
      proxy_pass http://backend;
    }
  }
}
